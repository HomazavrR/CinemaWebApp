@page
@model CinemaWebApp.Pages.Сотрудники.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить</h1>

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Сотрудник.Адрес" class="control-label"></label>
                <input asp-for="Сотрудник.Адрес" class="form-control" />
                <span asp-validation-for="Сотрудник.Адрес" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.Телефон" class="control-label"></label>
                <input asp-for="Сотрудник.Телефон" class="form-control" />
                <span asp-validation-for="Сотрудник.Телефон" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.ПаспортныеДанные" class="control-label"></label>
                <input asp-for="Сотрудник.ПаспортныеДанные" class="form-control" />
                <span asp-validation-for="Сотрудник.ПаспортныеДанные" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.Пол" class="control-label"></label>
                <input asp-for="Сотрудник.Пол" class="form-control" />
                <span asp-validation-for="Сотрудник.Пол" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.КодСотрудника" class="control-label"></label>
                <input asp-for="Сотрудник.КодСотрудника" class="form-control" />
                <span asp-validation-for="Сотрудник.КодСотрудника" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.Фио" class="control-label"></label>
                <input asp-for="Сотрудник.Фио" class="form-control" />
                <span asp-validation-for="Сотрудник.Фио" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.Возраст" class="control-label"></label>
                <input asp-for="Сотрудник.Возраст" class="form-control" />
                <span asp-validation-for="Сотрудник.Возраст" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Сотрудник.КодДолжности" class="control-label"></label>
                <select asp-for="Сотрудник.КодДолжности" class ="form-control" asp-items="ViewBag.КодДолжности"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
