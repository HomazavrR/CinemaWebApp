@page
@model CinemaWebApp.Pages.Сотрудники.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Сотрудники</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].Адрес)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].Телефон)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].ПаспортныеДанные)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].Пол)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].Фио)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].Возраст)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сотрудник[0].КодДолжностиNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Сотрудник) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Адрес)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Телефон)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ПаспортныеДанные)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Пол)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Фио)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Возраст)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.КодДолжностиNavigation.НаименованиеДолжности)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.КодСотрудника">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.КодСотрудника">Описание</a> |
                <a asp-page="./Delete" asp-route-id="@item.КодСотрудника">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
