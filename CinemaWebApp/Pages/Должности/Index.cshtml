@page
@model CinemaWebApp.Pages.Должности.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Должности</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Должность[0].НаименованиеДолжности)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Должность[0].Оклад)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Должность[0].Обязанности)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Должность[0].Требования)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Должность) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.НаименованиеДолжности)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Оклад)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Обязанности)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Требования)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.КодДолжности">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.КодДолжности">Описание</a> |
                <a asp-page="./Delete" asp-route-id="@item.КодДолжности">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
